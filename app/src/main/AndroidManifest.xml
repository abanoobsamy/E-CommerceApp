<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.abanoob_samy.ecommerceapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ECommerceApp">
        <activity
            android:name=".Ui.Activities.CheckPaymentActivity"
            android:label="Payment Detailed"
            android:exported="false" />
        <activity
            android:name=".Ui.Activities.AddressActivity"
            android:exported="false" />
        <activity
            android:name=".Ui.Activities.AddAddressActivity"
            android:exported="false" />
        <activity
            android:name=".Ui.Activities.CartActivity"
            android:exported="false"
            android:label="My Cart"
            android:theme="@style/Theme.ECommerceApp" />
        <activity
            android:name=".Ui.Activities.PopularSeeAllActivity"
            android:exported="false"
            android:theme="@style/Theme.ECommerceAppSign" />
        <activity
            android:name=".Ui.Activities.NewProductSeeAllActivity"
            android:exported="false"
            android:theme="@style/Theme.ECommerceAppSign" />
        <activity
            android:name=".Ui.Activities.SeeAllActivity"
            android:exported="false"
            android:theme="@style/Theme.ECommerceAppSign" />
        <activity
            android:name=".Ui.Activities.DetailsActivity"
            android:exported="false"
            android:theme="@style/Theme.ECommerceAppSign" />
        <activity
            android:name=".Ui.SignUser.LoginActivity"
            android:exported="false"
            android:theme="@style/Theme.ECommerceAppSign" />
        <activity
            android:name=".Ui.SignUser.RegisterActivity"
            android:exported="false"
            android:theme="@style/Theme.ECommerceAppSign" />
        <activity
            android:name=".Ui.SignUser.GoSignActivity"
            android:exported="true"
            android:theme="@style/Theme.ECommerceAppGoSign">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Ui.Activities.OnBoardingActivity"
            android:exported="false"
            android:theme="@style/Theme.ECommerceAppBoarding" />
        <activity
            android:name=".Ui.Activities.MainActivity"
            android:exported="false"
            android:theme="@style/Theme.ECommerceApp" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

    </application>

</manifest>